<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/grid_btm_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="0dp"
            android:layout_alignParentBottom="true"
            android:background="#CC663096"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/grid_btm_left"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/grid_btm_left" />

            <TextView
                android:id="@+id/grid_btm_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="center"
                android:text="A-Z"
                />

            <ImageButton
                android:id="@+id/grid_btm_right"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/grid_btm_right" />

        </LinearLayout>

        </RelativeLayout>

</merge>