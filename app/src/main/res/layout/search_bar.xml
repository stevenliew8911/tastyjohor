<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/md_02">

    <ImageButton
        android:id="@+id/img_btn_three"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="imgBtnThreeClicked"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_three" />

    <ImageView
        android:id="@+id/img_view_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginStart="?attr/actionBarSize"
        android:adjustViewBounds="true"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/img_btn_cart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="@null"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_cart" />

    <ImageButton
        android:id="@+id/img_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/img_btn_cart"
        android:layout_toStartOf="@id/img_btn_cart"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="imgBtnSearchClicked"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_search" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/img_btn_three"
        android:layout_toLeftOf="@id/img_btn_search"
        android:layout_toRightOf="@id/img_btn_three"
        android:layout_toStartOf="@id/img_btn_search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:theme="@style/EditTextStyle"
        android:visibility="visible" />
</RelativeLayout>