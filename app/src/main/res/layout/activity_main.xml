<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <include layout="@layout/app_bar_main" />

    <include layout="@layout/app_bar_main" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_main"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EBEBEB"
                    android:orientation="vertical">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="30dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_user"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_user"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Me"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_me"
                        />

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_user"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_user"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="My Collection"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_collection"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_saved"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_saved"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Saved"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_saved"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Happening"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="#CCCCCC" />

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_home"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_home"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Home"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_home"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_nearby"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_nearby"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Nearby"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_nearby"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_redeem"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_redeem"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Redeem"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_redeem"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_products"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_products"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Products"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_products"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="About"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="#CCCCCC" />

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_about_us"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_about_us"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="About Us"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_aboutus"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_terms"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_terms"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Terms &amp; Conditions"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_terms"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_pdpa"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_pdpa"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="PDPA"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_pdpa"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="50dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_nav_rate_app"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_nav_rate_app"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingStart="20dp"
                        android:text="Rate this apps"
                        android:textAllCaps="false"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:id="@+id/btn_rate"/>
                </LinearLayout>
            </ScrollView>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:background="#3F296A"
                android:gravity="center"
                android:text="Share This Apps"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:id="@+id/btn_share"/>
        </RelativeLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>