<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="0dp"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/taeyeon"

        />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="65dp"
        android:paddingBottom="10dp"
        android:src="@drawable/logolist"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgImage"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="TITLE"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#000000"
        android:text="DATE"
        />
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:textStyle="bold"
        android:text="DESCRIPTION"/>

    <ImageView
        android:id="@+id/logofacebok"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/subtitle"
        android:src="@drawable/facebook_logo"
        />
    <ImageView
        android:id="@+id/logoinstagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/subtitle"
        android:layout_toRightOf="@id/logofacebok"
        android:src="@drawable/instagram_logo"
        />

    <RelativeLayout
        android:id="@+id/recommend_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/logoinstagram"
        android:background="#d3d3d3"
   >
        <ImageView
            android:id="@+id/recommend_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/more_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recommend_more"
            android:text="What you need to know"/>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/recommend_more"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        >
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend_more"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:background="#FFFFFF"
        >
            <ImageView
                android:id="@+id/recommend_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/instagram_logo"/>

            <View
                android:id="@+id/recommend_underline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/recommend_logo"
                android:layout_alignRight="@+id/recommend_logo"
                android:layout_alignEnd="@+id/recommend_logo" />

            <TextView
                android:id="@+id/recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommend_underline"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Recommend TITLE"/>

            <TextView
                android:id="@+id/recommend_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_below="@id/recommend_title"
                android:textStyle="bold"
                android:text="Recommend Subtitle"/>

            <TextView
                android:id="@+id/recommend_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommend_subtitle"
                android:layout_gravity="bottom|left"
                android:textStyle="bold"
                android:text="Price"/>

            <ImageView
                android:id="@+id/recommend_trolley"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="90dp"
                android:layout_toRightOf="@id/recommend_price"
                android:layout_below="@id/recommend_subtitle"
                android:layout_gravity="bottom|right"
                android:src="@drawable/trolley"/>


        </RelativeLayout>

</LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/location_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"

        >
        <ImageView
            android:id="@+id/location_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"/>
        <TextView
             android:id="@+id/location_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/location_logo"
             android:text="Locations"/>
        <TextView
            android:id="@+id/location_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="4"
            android:lines="4"
            android:layout_below="@id/location_logo"
            android:text="Solaris Dutamas\n1, Jalan Dutamas 1\n50480 Kuala Lumpur\nWilayah Persekutuan, Malaysia"/>

        <ImageView
            android:id="@+id/google_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/location_address"
            android:src="@drawable/google_map"/>




    </RelativeLayout>
    <View
        android:id="@+id/location_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="0dp"
        android:layout_below="@id/location_layout"
        android:background="#CCCCCC" />
    <RelativeLayout
        android:id="@+id/map_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_divider"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        >
        <ImageView
            android:id="@+id/map_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/map_logo"/>
        <TextView
            android:id="@+id/map_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/map_logo"
            android:text="Map"/>
        <ImageView
            android:id="@+id/map"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/map_logo"
            android:src="@drawable/map"/>

    </RelativeLayout>


</RelativeLayout>
