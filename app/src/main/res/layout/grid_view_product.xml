<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
     >

    <ImageView
        android:id="@+id/grid_product_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/perfume"/>
    <View
        android:id="@+id/grid_underline"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grid_product_logo"
        android:layout_alignRight="@+id/grid_product_logo"
        android:layout_alignEnd="@+id/grid_product_logo" />
    <TextView
        android:id="@+id/grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_underline"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Grid TITLE"/>

    <TextView
        android:id="@+id/grid_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_below="@id/grid_title"
        android:textStyle="bold"
        android:text="Grid Subtitle"/>

    <TextView
        android:id="@+id/grid_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_subtitle"
        android:layout_gravity="bottom|left"
        android:textStyle="bold"
        android:text="Grid Price"/>

    <ImageView
        android:id="@+id/grid_trolley"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/grid_price"
        android:layout_below="@id/grid_subtitle"
        android:layout_gravity="bottom|right"
        android:src="@drawable/trolley"/>


</RelativeLayout>
