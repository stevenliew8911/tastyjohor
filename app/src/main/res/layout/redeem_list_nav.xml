<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="0dp"
    android:padding="0dp"
    >
    <Button
        android:id="@+id/redeem_product"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Redeem Now"
        android:textColor="#FFFFFF"
        android:background="#800080"/>

    <TextView
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Redeem Soon (1)"
        android:gravity="center"
        android:layout_below="@id/redeem_product"
        android:background="#CCCCCC" />
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:scaleType="fitXY"
        android:src="@drawable/taeyeon" />

    <TextView
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Past Redemptions (1)"
        android:gravity="center"
        android:layout_below="@id/bgImage"
        android:background="#CCCCCC" />
    <ImageView
        android:id="@+id/bgImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:scaleType="fitXY"
        android:src="@drawable/taeyeon" />

</RelativeLayout>
    </ScrollView>